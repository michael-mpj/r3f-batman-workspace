# NPM Configuration for R3F Batman Workspace
# Handle peer dependency conflicts gracefully

# Use legacy peer deps resolution for compatibility
legacy-peer-deps=true

# Auto-install peer dependencies
auto-install-peers=true

# Reduce logging noise during installs
loglevel=warn

# Faster installations
prefer-offline=true
progress=false

# Registry settings
registry=https://registry.npmjs.org/

# Optional: Engine strict mode (uncomment if needed)
# engine-strict=true
engine-strict=false
strict-peer-deps=false
