{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Dev Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/vite",
      "args": ["--host"],
      "cwd": "${workspaceFolder}/apps/easymap",
      "console": "integratedTerminal"
    },
    {
      "name": "ğŸš€ R3F Workspace - Full Development",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/workspace-info.mjs",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "preLaunchTask": "workspace-validation"
    },
    {
      "name": "ğŸ“¦ Package Validation Check",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/scripts/check-compatibility.mjs",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "name": "ğŸ§ª Run All Tests",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["run", "test", "--workspaces"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "ğŸ—ï¸ Build All Packages",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["run", "build", "--workspaces"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    },
    {
      "name": "ğŸ” Dependency Audit",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/node_modules/.bin/npm",
      "args": ["outdated"],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}"
    }
  ],
  "compounds": [
    {
      "name": "ğŸ”§ Complete Workspace Validation",
      "configurations": ["ğŸ“¦ Package Validation Check", "ğŸ” Dependency Audit", "ğŸ§ª Run All Tests", "ğŸ—ï¸ Build All Packages"],
      "stopAll": true
    }
  ]
}
