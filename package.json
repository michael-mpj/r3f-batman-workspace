{
  "name": "@michael-mpj/r3f-batman",
  "version": "1.0.0",
  "description": "R3F Batman Workspace - Advanced React Three Fiber development environment",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*",
    "projects/*",
    "apps/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=projects/R3f-StarterKit",
    "build": "npm run build --workspaces --if-present",
    "build:starterkit": "npm run build --workspace=projects/R3f-StarterKit",
    "build:cyber-forge": "npm run build --workspace=apps/cyber-forge",
    "build:production": "npm run build:starterkit && npm run build:cyber-forge",
    "deploy:starterkit": "cd projects/R3f-StarterKit && vercel --prod",
    "deploy:cyber-forge": "cd apps/cyber-forge && vercel --prod",
    "deploy:all": "npm run build:production && npm run deploy:starterkit && npm run deploy:cyber-forge",
    "deploy:production": "node scripts/deploy-production.mjs",
    "deploy:local": "node scripts/deploy-local.mjs",
    "preview:starterkit": "npm run preview --workspace=projects/R3f-StarterKit",
    "preview:cyber-forge": "npm run preview --workspace=apps/cyber-forge",
    "test": "npm run test --workspaces --if-present",
    "lint": "eslint . --ext .js,.jsx,.mjs",
    "lint:fix": "eslint . --ext .js,.jsx,.mjs --fix",
    "format": "prettier --write .",
    "check-compatibility": "node scripts/check-compatibility.mjs",
    "batman": "node scripts/batman.mjs",
    "batman:enhanced": "node scripts/batman-enhanced.mjs",
    "batman:vscode": "node scripts/batman-vscode.mjs",
    "batman:auto": "node scripts/batman-auto-close.mjs",
    "batman:ultimate": "node scripts/batman-ultimate.mjs",
    "prepare": "husky",
    "auto-merge": "node scripts/auto-merge.mjs",
    "extensions:install": "node scripts/batman-install-extensions.mjs",
    "extensions:list": "code --list-extensions",
    "commit:format": "node scripts/batman-commit-auto.mjs",
    "commit:test": "echo 'Testing Batman commit formatter...' && node scripts/batman-commit-auto.mjs",
    "security:audit": "npm audit --audit-level=moderate",
    "security:audit-fix": "npm audit fix",
    "security:check": "npm audit --audit-level=high",
    "security:outdated": "npm outdated",
    "security:licenses": "npx license-checker --summary",
    "security:full-check": "node scripts/security-check.mjs"
  },
  "dependencies": {
    "@react-three/drei": "^10.7.4",
    "@react-three/fiber": "^9.3.0",
    "@react-three/postprocessing": "^3.0.4",
    "@react-three/xr": "^6.6.26",
    "json-schema": "^0.4.0",
    "leva": "^0.10.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "three": "^0.180.0",
    "tsx-to-jsx": "^0.0.4",
    "zustand": "^5.0.8"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.26.2",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@react-three/eslint-plugin": "^0.1.2",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.2",
    "@vitest/browser": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "babel-jest": "^30.1.2",
    "concurrently": "^9.2.1",
    "deep-equal": "^2.2.3",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^30.1.1",
    "jest-environment-jsdom": "^30.1.2",
    "lint-staged": "^16.1.6",
    "prettier": "^3.5.1",
    "turbo": "^2.5.6",
    "typescript": "^5.7.2",
    "vite": "^7.1.5",
    "vitest": "^3.2.4"
  },
  "lint-staged": {
    "*.{js,jsx,mjs}": [
      "eslint --fix"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
