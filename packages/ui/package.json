{
  "name": "@r3f-workspace/ui",
  "version": "1.0.0",
  "type": "module",
  "description": "Shared UI components for R3F applications",
  "main": "./src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./components/*": "./src/components/*",
    "./styles/*": "./src/styles/*"
  },
  "files": [
    "src",
    "dist"
  ],
  "scripts": {
    "build": "vite build",
    "dev": "vite build --watch",
    "test": "vitest",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write src/**/*.{js,jsx,css}",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^6.1.3",
    "jsdom": "^22.1.0",
    "eslint": "^9.35.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.1"
  },
  "publishConfig": {
    "access": "public"
  }
}
